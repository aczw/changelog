---
import type { HTMLAttributes } from "astro/types";

type Props = Omit<HTMLAttributes<"a">, "class" | "aria-label"> & {
  className?: string;
};

const { className, target, title, ...props } = Astro.props;
---

<a
  target={target}
  aria-label={title}
  title={title}
  class:list={[
    "w-fit decoration-1 underline-offset-2 hover:bg-sweater-2 hover:text-sweater-7 hover:no-underline",
    className,
  ]}
  {...props}><slot /></a
>
