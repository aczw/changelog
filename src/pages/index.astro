---
import { getCollection } from "astro:content";

import { ArrowRight } from "lucide-astro";

import BaseLayout from "@/layouts/base-layout.astro";

import Logo from "@/components/logo.astro";
import Link from "@/components/link.astro";
import ReleaseContent from "@/components/release-content.astro";

let releases = await getCollection("changelog");
releases.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

let previous = releases[1];
---

<BaseLayout
  meta={{
    kind: "route",
    title: "Changelog",
    description: "All the updates I've made to my website, organized as a series of patch notes.",
  }}
>
  <main class="mx-auto max-w-content px-7 py-12">
    <Logo />

    <div>
      <div class="xs:grid-cols-2 mb-12 grid grid-cols-1 gap-6">
        <p>
          All the updates I've made to this site, organized as a series of patch notes. See <Link
            href="https://charleszw.com/posts/changelogs"
            target="_blank">my post</Link
          > on changelogs for more context.
        </p>
        <p class="subtitle">
          Only the most recent release is shown here. Feel free to visit any older versions via the
          links below.
        </p>
      </div>

      <ul
        class="border-y-thin xs:grid-cols-5 pointer-events-none grid grid-cols-4 gap-y-1 border-sweater-9 py-6 sm:grid-cols-6 content:grid-cols-7 [&>li:not(:hover)]:hover:brightness-[65%]"
      >
        {
          releases.map(({ data: { version }, slug }, index) => (
            <li class="transition-[filter]" style={{ "--order": index }}>
              <Link
                href={`/${slug}`}
                className="pointer-events-auto transition-[filter,opacity,color]"
              >
                {version}
              </Link>
            </li>
          ))
        }
      </ul>
    </div>

    <div class="relative flex flex-col">
      <ReleaseContent release={releases[0]} className="border-sweater-9" />

      <div class="border-t-thin xs:flex-row xs:gap-6 flex flex-col gap-3 border-sweater-9 pt-12">
        <div class="xs:w-1/5 w-full">
          <h2>More releases</h2>
          <p class="subtitle">Previous changelog</p>
        </div>

        <a
          href={`/changelog/${previous.slug}`}
          class="xs:w-4/5 group flex w-full items-center justify-between rounded-lg bg-sweater-9 p-4 transition-colors hover:bg-sweater-8"
        >
          <div>
            <p
              class="font-mono font-[150] text-sweater-5 transition-colors group-hover:text-sweater-4"
            >
              {previous.data.version}
            </p>
            <p class="subtitle">
              Released
              {
                previous.data.date.toLocaleDateString("en-US", {
                  month: "long",
                  day: "numeric",
                  year: "numeric",
                  timeZone: "America/New_York",
                })
              }
            </p>
          </div>

          <div
            aria-hidden="true"
            class="rounded-full bg-sweater-8 p-1 transition-colors group-hover:bg-sweater-7"
          >
            <ArrowRight
              class="shrink-0 stroke-sweater-5 transition-colors group-hover:stroke-sweater-4"
            />
          </div>
        </a>
      </div>
    </div>
  </main>
</BaseLayout>
